<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="20dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CP : SIGN UP"
        android:id="@+id/signUpBtnOnAdvertiser"
        android:layout_marginTop="21dp"
        android:textColor="@android:color/white"
        android:background="#169bd5"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CP : SIGN IN"
        android:id="@+id/signInBtnOnAdvertiser"
        android:textColor="@android:color/white"
        android:background="#169bd5"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@+id/signUpBtnOnAdvertiser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Advertiser User Action"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>