<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iga.LineCrossPromotionSampleProj">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name="com.iga.LineCrossPromotionSampleProj.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BridgeActivity"></activity>
        <activity android:name=".AdvertiserActivity"></activity>
        <activity android:name=".PublisherOfferwallActivity"></activity>
        <activity android:name=".PublisherInterstitialActivity"></activity>

        <!-- LineCrossPromotion Requires Appkey, HashKey Setting -->
        <meta-data android:name="igaworks_app_key" android:value="INPUT_YOUR_APP_KEY"/>
        <meta-data android:name="igaworks_hash_key" android:value="INPUT_YOUR_HASH_KEY"/>
        <meta-data android:name="igaworks_server_type" android:value="server"/>

        <meta-data android:name="line_bvt_appid" android:value="TEST_CP_TANTAN"/>
        <meta-data android:name="line_bvt_appsecret" android:value="appsecret"/>

        <!-- LineCrossPromotion Requires Google Install Receiver Setting -->
        <receiver android:name="com.igaworks.IgawReceiver" android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER"/>
            </intent-filter>
        </receiver>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

    <!-- LineCrossPromtionSDK Requires Below Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


</manifest>
